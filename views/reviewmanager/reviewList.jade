extends reviewLayout

block link
    - var selected = '/review'
    script.
        var URL_FOLDER = '/review'

block reviewBody
    include panels/reviewToolbar
    form#reviewListForm(role='form', method='post')

        if data.length
            .row
                each row in data
                    .col.m12.l6: .card
                        .card-image
                            img(src="https://cdn.vidible.tv/prod/2015-02/12/54dd2c41e4b091e553252897_o_F_v0.jpg")
                            .card-title.col.s11
                                if (row.title && row.title.length > 0)
                                    .truncate= row.title
                                else
                                    .truncate NO TITLE


                        .card-content
                            if row.absinthe
                                p
                                    = row.absinthe.make
                                    br
                                    = row.absinthe.year

                        .card-action
                            a(href= "/review/view?id=#{row.id}") Delete
                            a(href= "/review/view?id=#{row.id}") Edit

        else
            .card: .card-content: .section No Results
                br
                a.btn.center-align(href="/review/add")
                    | Review an Absinthe

    include ../includes/confirmModal

