extends reviewLayout

block link
    - var selected = '/review'
    script.
        var URL_FOLDER = '/review'

append reviewContent

    include panels/reviewToolbar

    form#reviewListForm(role='form', method='post')
        if data.length
            .row
                each row in data
                    .col.m12.l6: .card
                        .card-image
                            img(src="https://cdn.vidible.tv/prod/2015-02/12/54dd2c41e4b091e553252897_o_F_v0.jpg")
                            .card-title.col.s11
                                if (row.title && row.title.length > 0)
                                    .truncate= row.title
                                else
                                    .truncate NO TITLE

                        .card-content
                            if row.absinthe
                                p
                                    = row.absinthe.make
                                    br
                                    = row.absinthe.year

                        .card-action
                            a.modal-trigger(href="#confirmModal") Delete
                            #confirmModal.modal
                                .modal-content
                                    h4 Modal Header
                                    p Are you sure you want to delete this review?
                                .modal-footer
                                    a(href="/review/view?id=#{row.id}", class=" modal-action modal-close waves-effect waves-green btn-flat") Delete Now
                                    a(href="#!", class=" modal-action modal-close waves-effect waves-red btn-flat") Cancel

                            a(href= "/review/view?id=#{row.id}") Edit

        else
            .card: .card-content: .section No Results
                br
                a.btn.center-align(href="/review/add")
                    | Review an Absinthe



